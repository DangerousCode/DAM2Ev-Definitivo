package cliente;

import java.net.Socket;
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.OutputStream;
import java.net.*;

public class Cliente {

	public static void main(String[] args) throws IOException, ClassNotFoundException, InterruptedException {
		Socket socket = new Socket("localhost", 6000);
		System.out.println("Conectado");
		
		//Ventanas ventana=new Ventanas("Cliente");
		ObjectInputStream ois = new ObjectInputStream(socket.getInputStream());
		Bici datos = (Bici) ois.readObject();
		//ventana.escribecadena("Se va a alquilar la bicicleta numero: "+datos.numero);
		System.out.println(datos.numero);
		datos.setReservada(true);
		//ventana.escribecadena("Bicicleta reservada");
		ObjectOutputStream oos = new ObjectOutputStream(socket.getOutputStream());
		oos.writeObject(datos);
		
		oos.close();
		ois.close();
		socket.close();
	}

}
