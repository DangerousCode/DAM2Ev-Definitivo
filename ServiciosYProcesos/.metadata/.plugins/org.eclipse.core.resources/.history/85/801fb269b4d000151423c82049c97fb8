package servidor;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.*;
import java.util.concurrent.Semaphore;

import bici.Bici;
public class Hilo extends Thread{
	Socket socket1;
	Semaphore semaforo;
	Bici[] bici;
	private Ventanas ventana;
	
	Hilo(Socket socket, Semaphore semaforo, Bici[] bici, Ventanas ventana){
		this.socket1=socket;
		this.semaforo=semaforo;
		this.bici=bici;
		this.ventana=ventana;
	}
	
	public void run(){
		try {
			Bici bicireserva=new Bici();
			int i=0;
			semaforo.acquire();
			
			socket1.setTcpNoDelay(true);
			
			do{
				bicireserva=bici[i];
				i++;
			}while(i<bici.length && bici[i].isReservada());
			
			ObjectOutputStream oos=new ObjectOutputStream(socket1.getOutputStream());
			
			oos.writeObject(bicireserva);
			
			ObjectInputStream ois=new ObjectInputStream(socket1.getInputStream());
			Bici bicicleta=(Bici) ois.readObject();

			
			bici[i]=bicicleta;
			ventana.escribecadena("Bicicleta numero: "+bici[i].getNumero()+" reservada: "+bici[i].isReservada());
			
			semaforo.release();
			ois.close();
			oos.close();
			socket1.close();
		} catch (IOException e) {
			e.printStackTrace();
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
