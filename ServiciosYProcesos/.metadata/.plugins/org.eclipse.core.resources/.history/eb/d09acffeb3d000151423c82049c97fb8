package servidor;
import java.io.IOException;
import java.net.*;
import java.util.ArrayList;
import java.util.concurrent.Semaphore;

import bici.Bici;
public class Servidor {

	public static void main(String[] args) throws IOException, InterruptedException {
		ServerSocket serverSocket=new ServerSocket(6000);
		Bici[] bici=new Bici[10];
		Semaphore semaforo=new Semaphore(1);
		Hilo[] hilo=new Hilo[3];
		Ventanas ventana=new Ventanas("Server");
		
		for(int i=0;i<10;i++){
			bici[i]=new Bici(i+1,false);
		}
		
		for(int i=0;i<3;i++){
			ventana.escribecadena("Esperando cliente");
			Socket cliente=serverSocket.accept();
			ventana.escribecadena("Conexion establecida");
			hilo[i]=new Hilo(cliente,semaforo,bici,ventana);
			hilo[i].start();
		}
		for(int i=0;i<3;i++){
			hilo[i].join();
		}
		serverSocket.close();
	}
}
